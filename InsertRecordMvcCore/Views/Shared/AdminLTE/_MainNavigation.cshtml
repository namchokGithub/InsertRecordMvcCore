@using static InsertRecordMvcCore.Helpers.NavigationIndicatorHelper;

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="~/Home" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">User manager system</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Hi user!</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->
                @* --------------- Home --------------- *@
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Home
                        </p>
                    </a>
                </li>
                @* --------------- Home --------------- *@

                @* --------------- Management --------------- *@
                <li class="nav-item">
                    <a asp-controller="Management" asp-action="Index" class="nav-link @Url.MakeActiveClass("management","index")">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Management
                        </p>
                    </a>
                </li>
                @* --------------- Management --------------- *@

                @* --------------- Insert Data --------------- *@
                <li class="nav-item">
                    <a asp-controller="InsertUser" asp-action="Create" class="nav-link @Url.MakeActiveClass("insertuser","create")">
                        <i class="far fa-circle nav-icon"></i>
                        <p>Insert Data</p>
                    </a>
                </li>
                @* --------------- Insert Data --------------- *@

                @* --------------- Edit profile --------------- *@
                <li class="nav-item">
                    <a asp-controller="Profile" asp-action="Index" class="nav-link @Url.MakeActiveClass("profile","edit")">
                        <i class="far fa-circle nav-icon"></i>
                        <p>Manage profile</p>
                    </a>
                </li>
                @* --------------- Edit profile --------------- *@

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>